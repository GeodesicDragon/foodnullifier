<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>FoodNullifier</defName>
    <label>food nullifier</label>
    <labelNoun>a food nullifier</labelNoun>
    <description>An installed food nullifier.</description>
    <descriptionHyperlinks><ThingDef>FoodNullifier</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>FoodNullifier</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <stages>
      <li>
        <hungerRateFactorOffset>-1</hungerRateFactorOffset>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_ReactOnDamage">
        <damageDefIncoming>EMP</damageDefIncoming>
        <vomit>true</vomit>
      </li>
    </comps>
  </HediffDef>

  <ThingDef ParentName="BodyPartBionicBase">
    <defName>FoodNullifier</defName>
    <label>food nullifier</label>
    <description>This artificial stomach is very expensive to create, but never requires any sustenance, meaning that the user never has to eat anything ever again.\n\nDespite years of intensive study, the science behind how this item actually works still isn't fully understood.</description>
    <descriptionHyperlinks><RecipeDef>InstallFoodNullifier</RecipeDef></descriptionHyperlinks>
    <thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
    <costList>
      <Steel>300</Steel>
	  <Plasteel>300</Plasteel>
	  <MealSimple>100</MealSimple>
	  <MealFine>100</MealFine>
	  <MealLavish>100</MealLavish>
      <ComponentSpacer>10</ComponentSpacer>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Bionics</researchPrerequisite>
		<skillRequirements>
			<Crafting>15</Crafting>
			<Intellectual>15</Intellectual>
		</skillRequirements>
    </recipeMaker>
	<statBases>
		<MarketValue>5000</MarketValue>
		<MaxHitPoints>100</MaxHitPoints>
		<Mass>3</Mass>
	</statBases>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>InstallFoodNullifier</defName>
    <label>install food nullifier</label>
    <description>Install a food nullifier.</description>
    <descriptionHyperlinks><ThingDef>FoodNullifier</ThingDef></descriptionHyperlinks>
    <jobString>Installing food nullifier.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>FoodNullifier</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>FoodNullifier</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Stomach</li>
    </appliedOnFixedBodyParts>
    <addsHediff>FoodNullifier</addsHediff>
	<skillRequirements>
		<Medicine>15</Medicine>
	</skillRequirements>
  </RecipeDef>  
</Defs>